<h1>New Review Page </h1>
<p>
<form action="/reviews"method="POST" >

<fieldset>
<legend> Add Review Form</legend>
</p>
<form action="/patron" method="post">
  <label>
  Select a patron:
    <select name="patron_id">
      <% for patron in @patrons %>
      <option value="<%= patron.id %>"><%= patron.username %></option>
      <% end %>
    </select>
  </label>
  <label>
    Select a recipe:
    <select name="recipe_id">
      <% for recipe in @recipes %>
      <option value="<%= recipe.id %>"><%= recipe.name %></option>
      <% end %>
    </select>
  </label>
  <label for="review">Review</label>
    <input type="text" id="review" name="review" placeholder="Review..." />
    <label for="bean-rating">Bean Rating</label>
    <input type="number" id="bean-rating" name="bean_rating" placeholder="Rating * outta 5" />
  <input class="btn btn--action" type='submit' value="Submit
  Review">
</form>


</fieldset>
