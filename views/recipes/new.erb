        <input type="number" id="water-temp" name="water_temp" placeholder="Water Temperature" min="0" max="100" />
    <br>
      <label for="water-weight">Water in ml.</label>
        <input type="number" id="water-weight" name="water_weight" placeholder="Water in ml." min="0" />
