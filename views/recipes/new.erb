          <option value="Sea Salt">Sea Salt</option>
          <option value="Medium">Medium</option>
          <option value="Sand">Sand</option>
          <option value="Coarse">Coarse</option>
          <option value="Broken Glass">Broken Glass</option>
        </select>
    <br>
      <label for="info">Extra Information: </label>
        <input type="text" id="info" name="info" size = "100" placeholder="Extra Information" />
    <br>
      <button type ="submit">Create New Recipe</button>
</fieldset>
</p>
